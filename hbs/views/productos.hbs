<h2 style="color: blue">Vista de Productos</h2>
<br />

{{#if products}}
  <div class="table-responsive">
    <table class="table table-dark">
      <tr style="color: yellow">
        <th>Titulo</th>
        <th>Precio</th>
        <th>Miniatura</th>
      </tr>

      {{#each products}}
        <tr>
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td><img src="{{thumbnail}}" alt="" width="60px" height="60px" /></td>
        </tr>
      {{/each}}

    </table>
  </div>
{{else}}
  <h3 class="alert alert-danger">No hay productos</h3>
{{/if}}

<a href="/" class="btn btn-primary mt-3 mb-5">Formulario</a>